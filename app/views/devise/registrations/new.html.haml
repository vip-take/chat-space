.auth
  .auth-inner.clearfix
    .auth-inner__left
      %h2
        Crate Account
      .desc
        新規アカウントの作成
      .action
        = link_to 'ログインページに戻る', new_user_session_path, class: 'action-btn'
    .auth-inner__right
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .deviseErr
          = devise_error_messages!
        .field
          .field-title
            = f.label :name
          = f.text_field :name, autofocus: true, class: 'field-input'
        .field
          .field-title
            = f.label :email
          = f.email_field :email, autofocus: true, class: 'field-input'
        .field
          .field-title
            = f.label :password
            %i (英数字8文字以上)
          = f.password_field :password, autocomplete: "off", class: 'field-input'
        .field
          .field-title
            = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: 'field-input'
        .submit
          = f.submit "Create Account", class: 'submit-btn'
