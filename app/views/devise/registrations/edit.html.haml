.auth
  .auth-inner.clearfix
    .auth-inner__left
      %h2
        Edit Account #{resource_name.to_s.humanize}
      .desc
        アカウントの編集
      .action
        = link_to 'ログアウト', destroy_user_session_path, class: 'action-btn'
        = link_to 'トップページに戻る', root_path, class: 'action-btn'
    .auth-inner__right
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        .deviseErr
          = devise_error_messages!
        .field
          .field-title
            = f.label :name
          = f.text_field :name, autofocus: true, class: 'field-input'
        .field
          .field-title
            = f.label :email
          = f.email_field :email, autofocus: true, class: 'field-input'
        .field
          .field-title
            = f.label :password
            %i (変更したくない場合はそのままで)
          = f.password_field :password, autocomplete: "off", class: 'field-input'
        .field
          .field-title
            = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: 'field-input'
        .field
          .field-title
            = f.label :current_password
            %i （変更には現在のパスワードの入力が必要です）
          = f.password_field :current_password, autocomplete: "off", class: 'field-input'
        .submit
          = f.submit "Update", class: 'submit-btn'
