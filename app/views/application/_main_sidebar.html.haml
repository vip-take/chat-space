#main-sideBar
  .user
    .user-inner
      .user-inner__name__text
        = current_user.name
      .user-inner__name__edit
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
        = link_to edit_user_registration_path do
          = fa_icon "cog"
  .room
    - if groups.present?
      - groups.each do |group|
        = link_to messages_path(group) do
          .room-desc
            .room-desc__name.clearfix
              = group.name
            .room-desc__message
              - if group.messages.present?
                = group.messages.last.comment
              - else
                まだメッセージはありません
