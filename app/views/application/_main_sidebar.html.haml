#main-sideBar
  .user
    .user-inner
      .user-inner__name__text
        = current_user.name
      .user-inner__name__edit
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
        = link_to edit_user_registration_path do
          = fa_icon "cog"
  - groups.each do |group|
    = link_to messages_path(group) do
      .room
        .room-desc
          .room-desc__name
            = group.name
          .room-desc__message
            hello!今日もいい天気だね！
